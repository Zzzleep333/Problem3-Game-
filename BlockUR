package Models;

import javax.swing.*;

public class BlockUR extends Block {

    public BlockUR(int X, int Y, boolean can_destroyed) {
        super(X, Y, can_destroyed);
    }

    public void setImg(boolean can_destroyed) {
        if(!can_destroyed){
            Block = new ImageIcon(Path_to_blocks+"\\"+level+"\\"+"b4.png");
        } else{
            Block = new ImageIcon(Path_to_blocks+"\\"+"db4.png");
            //System.out.println(Path_to_blocks+"0.png" +"    "+ Block.getIconHeight());
        }
    }


    int function_of_blockD(int X){//определяет нижнюю границу блока

        if(X<=(X_coordinate+getWidth())&&(X>=X_coordinate)){
            return Y_coordinate+(X-X_coordinate);
        } else{
            return -10000;
        }
    }


    public String type_of_block(){
        return "UR";
    }
}
