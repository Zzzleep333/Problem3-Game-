package Models;

import javax.swing.*;
import java.awt.*;

public class My_background extends Model {
    public final String BACKGROUND_PATH = "Backgrounds\\";
    static String level ="1";
    private static int current_backgrounds = 0;
    boolean Visible = true;


    public My_background(int X){
        CreateBackground(X);
    }
    public void setImg() {
        img = new ImageIcon(BACKGROUND_PATH+level+"\\"+Character.toString('1'+current_backgrounds)+".png");
        nextBackground();
    }
    public void moveBackground(int X) {
        if(this.X>=-1000){
        this.X += X;
        } else{
            setVisible(false);
        }
    }
    public void move(){
        moveBackground(-Universe.SPEED_OF_UNIVERSE);
        getSignal();
    }
    public boolean isVisible() {
        return Visible;
    }
    public void setVisible(boolean Visible) {
        this.Visible = Visible;
    }
    public void CreateBackground(int X){
       setVisible(true);
       this.X = X;
       setImg();
        getSignal();
    }
    public void setLevel(String level){
        this.level = level;
    }
    void nextBackground(){
        current_backgrounds=(current_backgrounds+1)%2;
    }
}
